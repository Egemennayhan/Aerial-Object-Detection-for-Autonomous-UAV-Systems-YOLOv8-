{
  "description": "TEKNOFEST Task-1 Object Detection output schema (offline contract).",
  "type": "object",
  "required": ["id", "user", "frame", "detected_objects", "detected_translations"],
  "properties": {
    "id": { "type": "string" },
    "user": { "type": "string" },
    "frame": { "type": "string" },
    "detected_objects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["cls", "landing_status", "top_left_x", "top_left_y", "bottom_right_x", "bottom_right_y"],
        "properties": {
          "cls": { "type": "integer", "minimum": 0, "maximum": 3 },
          "landing_status": { "type": "integer", "enum": [-1, 0, 1] },
          "top_left_x": { "type": "integer", "minimum": 0 },
          "top_left_y": { "type": "integer", "minimum": 0 },
          "bottom_right_x": { "type": "integer", "minimum": 0 },
          "bottom_right_y": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "detected_translations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["x", "y", "z"],
        "properties": {
          "x": { "type": "number" },
          "y": { "type": "number" },
          "z": { "type": "number" }
        }
      }
    }
  }
}
